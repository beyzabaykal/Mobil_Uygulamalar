<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/txtAlarmTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alarm Çalıyor!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnErtele"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5 Dakika Ertele"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/txtAlarmTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnKapat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alarmı Kapat"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnErtele"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
