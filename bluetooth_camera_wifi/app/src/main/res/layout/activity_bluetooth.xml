<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <Button
            android:id="@+id/btnEnableBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Aç" />

        <Button
            android:id="@+id/btnDisableBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Kapat"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/btnListDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cihazları Listele"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/btnMakeVisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Görünür Ol"
            android:layout_marginTop="15dp" />

        <ListView
            android:id="@+id/listViewBluetooth"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnBackToMainBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ana Sayfaya Dön"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
